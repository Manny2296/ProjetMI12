<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConectActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="430dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtAccX"
            android:layout_width="368dp"
            android:layout_height="21dp"
            android:gravity="center_horizontal"
            android:text="Acelerómetro X:"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="88dp" />

        <TextView
            android:id="@+id/txtAccY"
            android:layout_width="368dp"
            android:layout_height="21dp"
            android:gravity="center_horizontal"
            android:text="Acelerómetro Y:"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="109dp" />

        <TextView
            android:id="@+id/txtAccZ"
            android:layout_width="368dp"
            android:layout_height="23dp"
            android:gravity="center_horizontal"
            android:text="Acelerómetro Z:"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="130dp" />

        <TextView
            android:id="@+id/txt_paried"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:gravity="center_horizontal"
            android:text="NONE "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="130dp" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="writee"
            android:text="Send" />

    </LinearLayout>

</RelativeLayout>